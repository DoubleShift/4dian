<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/vpi__background_holo_light"
    android:gravity="center" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_relative"
        android:layout_marginTop="20dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0dip"
        android:scrollbarThumbVertical="@drawable/scrollview_bg" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/vpi__background_holo_light"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32.0dip"
                    android:src="@drawable/ic_logo_welcome" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20.0dip"
                    android:background="@drawable/btn_item"
                    android:drawableLeft="@drawable/ic_login"
                    android:drawableRight="@drawable/ic_arrow"
                    android:minHeight="50.0dip"
                    android:onClick="login"
                    android:paddingLeft="40.0dip"
                    android:text="@string/btn_login" />

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_item"
                    android:drawableLeft="@drawable/ic_signup"
                    android:drawableRight="@drawable/ic_arrow"
                    android:minHeight="50.0dip"
                    android:onClick="signup"
                    android:paddingLeft="40.0dip"
                    android:text="@string/btn_signup" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>